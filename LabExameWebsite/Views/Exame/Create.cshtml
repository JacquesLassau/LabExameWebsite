@model LabExameWebsite.Models.ViewModel.ExameViewModel
@{ViewBag.Title = "Cadastrar";}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="titulo">
        <h2 class="texto-titulo">CADASTRAR</h2>
        <hr class="divisor-subtitulo" />
        <p class="subtitulo">Abaixo cadastre um novo Exame.</p>
    </div>
    <div class="form-horizontal">        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TipoExameID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoExameID, Model.ListarTiposExamesViewModel, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoExameID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NomeExame, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeExame, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeExame, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObservacaoExame, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ObservacaoExame, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ObservacaoExame, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Salvar</button>
                <button type="reset" class="btn btn-danger"><i class="fa fa-remove"></i> Cancelar</button>
                <a href="@Url.Action("Index", "Exame")" class="btn btn-primary form-group" style="margin-left:1px;"><i class="fa fa-reply"></i> Voltar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
