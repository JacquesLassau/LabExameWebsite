@model LabExameWebsite.Models.ViewModel.AgendamentoViewModel
@Scripts.Render("~/Scripts/Agendamento/PesquisaPaciente.js")
@Scripts.Render("~/Scripts/Agendamento/PesquisaExame.js")
@{ViewBag.Title = "Editar";}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="titulo">
        <h2 class="texto-titulo">EDITAR</h2>
        <hr class="divisor-subtitulo" />
        <p class="subtitulo">Abaixo edite a Marcação de Exame.</p>
    </div>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AgendamentoID)
        @Html.HiddenFor(model => model.PacienteID)
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">Selecione o Paciente</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomePacienteSelecionado, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.NomePacienteSelecionado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.NomePacienteSelecionado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CpfPacienteAgendamento, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.CpfPacienteAgendamento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CpfPacienteAgendamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4"></label>
                            <div class="col-md-8">
                                <button class="btn btn-primary form-control" name="btnPesquisaCpfPaciente" id="btnPesquisaCpfPaciente" onclick="OnclickPesquisarCpfPaciente()">Buscar por Cpf</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4"></label>
                            <div class="col-md-8">
                                <a href="@Url.Action("Create", "Paciente")" target="_blank" class="btn btn-default form-control">+ Cadastrar Novo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">Selecione o Exame</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TipoExameIDAgendamento, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.TipoExameIDAgendamento, Model.ListarTiposExameAgendamentoViewModel, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TipoExameIDAgendamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Exame</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.ExameID, Model.ListarExamesAgendamentoViewModel, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ExameID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4"></label>
                            <div class="col-md-8">
                                <a class="btn btn-primary form-control" name="btnPesquisaExame" id="btnPesquisaExame" onclick="OnclickPesquisarExame()">Listar por Tipo de Exame</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">Selecione Dia e Hora</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataHoraAgendamento, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DataHoraAgendamento, "", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DataHoraAgendamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Horas e Minutos</label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.HorasAgendamento, "", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.HorasAgendamento, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.MinutosAgendamento, "", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MinutosAgendamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Salvar</button>
                <button type="reset" class="btn btn-danger"><i class="fa fa-remove"></i> Cancelar</button>
                <a href="@Url.Action("Index", "Agendamento")" class="btn btn-primary form-group" style="margin-left:1px;"><i class="fa fa-reply"></i> Voltar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
